<header class="{{ params.color }} p-4 h-20 flex items-center w-full ">
<section class="flex ">
  <nav class="flex w-full" aria-label="Primary Site Navigation">
    <button class="block w-16 mr-2 py-3 z-20 lg:hidden focus:!outline-white nysds-menu-icon" id="nysds-mobile-menu" aria-controls="nysds-list-menu" aria-expanded="false">
      
      <span class="sr-only">Mobile Navigation Menu</span>
    </button>
  <h1 class="dsari nysds-text-22 text-white mx-0 lg:ml-16 lg:mr-6 flex items-center"><a href="{{ params.link }}" class="focus:!outline-white">{{ params.agencyname }}</a></h1>
    <ul class="list-none left-0 absolute hidden lg:static mt-16 lg:mt-0 lg:flex lg:flex-row lg:items-center text-white captialize font-bold {{params.color}}" id="nysds-list-menu" > <!-- this is first level -->
    {% for links in params.items %}
      <li class="">
          {% if links.subitems %}
            <button class="nysds-submenu-button captialize font-bold p-2 m-2 focus:!outline-white" aria-controls="nysds-submenu-{{links.number}}" aria-expanded="false">{{links.title}}</button>
              <ul class="list-none nysds-submenu absolute hidden {{params.color}}" id="nysds-submenu-{{links.number}}"> <!-- this is second level -->
                {% for sublinks in links.subitems %}
                <li class="p-4 first:mt-3">
                  <a href="{{sublinks.link}}" class="p-4 focus:!outline-white">{{sublinks.title}}</a>
                </li>
                {% endfor %}
              </ul>
          {% else %}
          
          <a href="{{links.link}}" class="p-3 m-1 focus:!outline-white">{{links.title}}</a>
          {% endif %}
      </li>
    {% endfor %}
    </ul>
  </nav>
</section>
</header>



